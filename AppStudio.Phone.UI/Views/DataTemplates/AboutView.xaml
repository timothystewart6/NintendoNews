<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:mytoolkit="clr-namespace:MyToolkit.Controls;assembly=MyToolkit.Extended"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DataTemplate x:Name="AboutViewHeader">
        <StackPanel Orientation="Horizontal" Margin="0,7,0,0">
            <TextBlock Text="about" FontSize="56" Foreground="{StaticResource AppForegroundColor}"/>
        </StackPanel>
    </DataTemplate>

    <DataTemplate x:Name="AboutViewContent">
        <Grid Margin="5" DataContext="{Binding Items[0]}">
            <mytoolkit:HtmlTextBlock Margin="10,0" Html="{Binding Content}" FontSize="26" Foreground="{StaticResource AppForegroundColor}"/>
        </Grid>
    </DataTemplate>

</ResourceDictionary>
